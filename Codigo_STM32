/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define SPI_BUFFER_SIZE 6 // Definimos el tamaño del buffer SPI
#define ESP32_I2C_ADDRESS 0x08 // Dirección I2C del ESP32 (ajustar según tu configuración)

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
char rxBuffer[1];  // Buffer para almacenar la entrada del usuario
char menu[] = "Seleccione una opción:\r\n1. Controlar dispositivo SPI\r\n2. Obtener medición de Sensor I2C\r\n";
char spi_tx_buffer[SPI_BUFFER_SIZE]; // Buffer para transmisión SPI
char commandBuffer[SPI_BUFFER_SIZE];
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
